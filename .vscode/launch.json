{
  "version": "0.2.0",
  "configurations": [
    {
      /* -------------------------------------- C/C++ -------------------------------------- */
      "name": "C/C++ Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}", // 让 CMake Tools 自动定位可执行文件
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "preLaunchTask": "CMake: Build", // 调试前自动执行 CMake 构建，确保使用最新编译结果
      "environment": [
        {
          "name": "PATH",
          "value": "C:/msys64/ucrt64/bin;${env:PATH}"
        }
      ],
      "cwd": "${fileDirname}",
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb"
    },

    /* -------------------------------------- Python -------------------------------------- */
    {
      "name": "Python: 当前文件",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "python": "C:/msys64/ucrt64/bin/python3.exe"
    },
  ]
}