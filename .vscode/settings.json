{
  // CMake
  // 指定 MSYS2 UCRT64 的 CMake 路径
  "cmake.cmakePath": "C:/msys64/ucrt64/bin/cmake.exe",

  // 生成与 UCRT64 的 make 兼容的 Makefile
  "cmake.generator": "Unix Makefiles",

  // 让 C/C++ 插件依赖 CMake Tools 的配置（自动识别头文件路径、编译器）
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",

  // 语言文件关联（避免 .h 文件被误识别）
  "files.associations": {
    "*.h": "cpp",
    "*.hpp": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "cctype": "cpp",
    "charconv": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "string": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "optional": "cpp",
    "random": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "format": "cpp",
    "initializer_list": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "new": "cpp",
    "numbers": "cpp",
    "ostream": "cpp",
    "queue": "cpp",
    "ranges": "cpp",
    "span": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "text_encoding": "cpp",
    "typeinfo": "cpp",
    "variant": "cpp"
  },

  // 新版 vscode 指定 Python 解释器的方式
  "python.defaultInterpreterPath": "C:/msys64/ucrt64/bin/python3.exe",  
  "python.linting.pylintEnabled": false,

  // 通用优化
  "json.validate.enable": false,
  "files.exclude": { "**/package.json": true }
}