{
  "version": "2.0.0",
  "tasks": [
    /* -------------------------------------- C -------------------------------------- */
    {
      "type": "shell",
      "label": "C: gcc 编译",
      "command": "C:/msys64/usr/bin/bash.exe",
      "args": [
        "-c",
        "gcc -g -Wall \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}.exe\""
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    /* -------------------------------------- C++ -------------------------------------- */
    {
      "type": "shell",
      "label": "C++: g++ 编译",
      "command": "C:/msys64/usr/bin/bash.exe",
      "args": [
        "-c",
        "g++ -g -std=c++17 -Wall \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}.exe\""
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },

    /* -------------------------------------- Python -------------------------------------- */
    {
      "type": "shell",
      "label": "Python: 运行",
      "command": "C:/msys64/usr/bin/bash.exe",
      "args": [
        "-c",
        "python3 \"${file}\""
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
  ]
}